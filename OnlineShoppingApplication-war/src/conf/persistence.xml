<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="OnlineShoppingApplication-warPU" transaction-type="JTA">
    <jta-data-source>jdbc/sample</jta-data-source>
    <class>Ent.Customer</class>
    <class>Ent.DiscountCode</class>
    <class>Ent.Manufacturer</class>
    <class>Ent.MicroMarket</class>
    <class>Ent.Product</class>
    <class>Ent.ProductCode</class>
    <class>Ent.PurchaseOrder</class>
    <class>Ent.users</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
